[group('report')]
report-all:
  just report-offnix
  just report-devnix
  just report-playnix

[group('secrets')]
secrets-edit target:
  RULES={{secrets_repo}}/secrets.nix agenix -e {{secrets_repo}}/{{target}}

[group('secrets')]
secrets-rekey:
  #!/usr/bin/env bash
  set -euo pipefail
  cd {{secrets_repo}}
  RULES=secrets.nix agenix --rekey
